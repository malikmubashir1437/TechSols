@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

@* <h1>@ViewData["Title"]</h1> *@
<div class="row my-5">
	<div class="col-md-8 offset-md-2">
		<section>
			<form id="account" method="post">
				<h2 class="alert alert-warning text-center">Use a local account to log in.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.Email" class="fw-bold"></label>
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.Password" class="fw-bold"></label>
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group">

					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for="Input.RememberMe">
						<label asp-for="Input.RememberMe" class="form-check-label" for="flexSwitchCheckDefault"></label>
					</div>

					@* <div class="checkbox"> *@
					@* 	<label asp-for="Input.RememberMe" class="form-label"> *@
					@* 		<input class="form-check-input" asp-for="Input.RememberMe" /> *@
					@* 	 *@
					@* 	</label> *@
					@* </div> *@
				</div>
				<div class="form-group">
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-success">Log in to your account</button>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col-6 text-center">
							<p>
								<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
							</p>
						</div>
						<div class="col-6 text-center">
							<p>
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col-12 text-center">
							<p>
								<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
							</p>
						</div>
					</div>
				</div>
			</form>
		</section>
	</div>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
