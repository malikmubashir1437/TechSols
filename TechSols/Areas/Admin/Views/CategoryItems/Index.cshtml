@model IEnumerable<TechSols.Entities.CategoryItem>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table myTable table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeItemReleased)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeItemReleased)
            </td>
            <td>
	            <a asp-action="Edit" asp-route-id="@item.Id">
                        &nbsp;	<i class="fas fa-pencil-alt text-primary"></i> &nbsp;
	            </a> |
                <a asp-action="Details" asp-route-id="@item.Id">
                        &nbsp;   <i class="fas fa-book-open-reader text-warning"></i> &nbsp;
	                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id">
                        &nbsp;     <i class="fas fa-trash-alt text-danger"></i> &nbsp;
	                </a>
            </td>
        </tr>
}
    </tbody>
</table>
